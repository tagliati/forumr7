<%= form_for(@post) do |f| %>
  <% if flash[:error] %> 
    <p style="color:red"><%= flash[:error]%></p>
  <% end %>
  <div class="field">
    <%= f.label :comment %><br />
    <%= f.text_field :comment %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<ul>
<% @posts.each do |post|%>
  <li>
    <%=  %>
    <%= link_to "#{post.id} #{post.created_at.strftime "%Y-%m-%d %H:%M:%S"}","#{root_url()}#{post.id}" %>
    <%= post.comment %>
  </li>
<% end %>
 
<%= render :partial => "shared/paginate"%>
